<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">Inicia Sesión</h2>
      <div class="form-group">
        <span><i class="glyphicon glyphicon-user"></i></span>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <span><i class="glyphicon glyphicon-lock"></i></span>
        <label>Contraseña</label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
      </div>
      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <label>Recordar mis datos</label>
          </div>
      <% end -%>
      <div class="actions">
        <%= f.submit "Ingresar", class: "btn btn-primary center-block"%>
      </div>
  <% end %>
</div>