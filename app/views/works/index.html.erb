<p id="notice"><%= notice %></p>

<h1 id="mainview">VISTA GENERAL - OBRAS</h1>
<%= link_to '<i class="glyphicon glyphicon-plus-sign"></i>'.html_safe, new_work_path %>


<table class="table table-bordered table-striped table-hover table-responsive">
  <thead>
  <tr>
    <th>ID</th>
    <th>Título</th>
    <th>Autor</th>
    <th>Año</th>
    <th>Detalles</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.id %></td>
        <td><%= work.name %></td>
        <td><%= work.author %></td>
        <td><%= work.year %></td>
        <td><%= link_to 'Ver detalles', work %></td>
        <td>
          <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_work_path(work) %>

          <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, work, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work', new_work_path %>
